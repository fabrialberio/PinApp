import os
import sys
import signal
import locale
import gettext

VERSION = '0.1.0'
pkgdatadir = '/app/share/pinapp'
localedir = '/app/share/locale'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('pinapp', localedir)
locale.textdomain('pinapp')
gettext.install('pinapp', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'pinapp.gresource'))
    resource._register()

    from pinapp import main
    sys.exit(main.main(VERSION))
