{
    "id": "io.github.fabrialberio.pinapp",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "pinapp",

    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",

        "--filesystem=xdg-data/applications:rw",
        "--filesystem=xdg-data/flatpak:ro",
        "--filesystem=/var/lib/flatpak:ro",
        "--filesystem=/var/lib/snapd:ro"
    ],

    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],

    "modules": [
        {
            "name": "python3.12",
            "buildsystem": "simple",
            "builddir": true,
            "build-commands": [
                "./configure --prefix=/app",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.python.org/ftp/python/3.12.0/Python-3.12.0.tar.xz",
                    "sha256": "795c34f44df45a0e9b9710c8c71c15c671871524cd412ca14def212e8ccb155d"
                }
            ]
        },
        {
            "name": "PinApp",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}